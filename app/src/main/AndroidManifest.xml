<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pissay.chatra">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.pissay.chatra.Chatra"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.ScreenSlideActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.CoordinateParlax"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>

        <activity
            android:name=".activities.HallsList"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.MainActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.Otp"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.SlotAvailCalendar"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.LocationOptionScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".activities.BookReserveNow"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBttUQ73U0E05ijjmK33lFRETfH0LoulL0" />

    </application>

</manifest>
